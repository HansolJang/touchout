<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/orderby_dropdown_txt"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:text="TextView"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/orderby_dropdown_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/divider_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:paddingLeft="27dp"
        android:paddingRight="27dp"
        android:layout_height="40dp" >

        <TextView
            android:id="@+id/category_item_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="페이스북"
            android:textColor="@color/content_title_text_color"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/account_info_facebook_id_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ㅜㅠㅜ"
            android:textColor="@color/content_title_text_color"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/divider_dark" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:paddingLeft="27dp"
        android:paddingRight="27dp"
        android:layout_height="40dp" >

        <TextView
            android:id="@+id/account_logout_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="로그아웃"
            android:textColor="@color/content_title_text_color"
            android:textSize="15sp"
            android:textStyle="bold"	 />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/divider_dark" />

    <LinearLayout
        android:id="@+id/account_withdrawal_layout"
        android:layout_width="match_parent"
        android:background="#fff"
        android:paddingLeft="27dp"
        android:paddingRight="27dp"
        android:layout_height="40dp" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/content_title_text_color"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="서비스 탈퇴 신청" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/divider_dark" />

</LinearLayout>
