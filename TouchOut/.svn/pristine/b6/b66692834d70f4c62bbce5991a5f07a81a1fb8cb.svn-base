	public Fragment getCurrentFragment() {
		int id = pager.getCurrentItem();
		String tag = "android:switcher:" + R.id.sorting_store_pager + ":" + id;
		Fragment f = getChildFragmentManager().findFragmentByTag(tag);
		return f;
	}
	
