<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/payment_item_height" >

                <ImageView
                    android:id="@+id/orderby_dropdown_img"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="7dp"
                    android:src="@drawable/payment_cart" />

                <TextView
                    android:id="@+id/payment_price_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="주문 상품 정보"
                    android:textColor="@color/title_text_color"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/divider_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/payment_item_height"
                android:background="#fff" >

                <TextView
                    android:id="@+id/category_item_txt"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="22dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="상품명"
                    android:textColor="@color/content_title_text_color"
                    android:textSize="@dimen/payment_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/payment_menu_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="TextView"
                    android:textColor="@color/sub_text_color"
                    android:textSize="@dimen/payment_text_size" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/divider_light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/payment_item_height"
                android:background="#fff" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="22dp"
                    android:gravity="center_vertical"
                    android:text="가게명"
                    android:textColor="@color/content_title_text_color"
                    android:textSize="@dimen/payment_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/payment_store_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="TextView"
                    android:textColor="@color/sub_text_color" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/divider_light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/payment_item_height"
                android:background="#fff" >

                <TextView
                    android:id="@+id/write_review_name_txt"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="22dp"
                    android:gravity="center_vertical"
                    android:text="주   소"
                    android:textColor="@color/content_title_text_color"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/payment_address_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="서울특별시 관악구 봉천동 산4-2 서울대학교 연구공원"
                    android:textColor="@color/sub_text_color"
                    android:textSize="@dimen/payment_text_size" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/divider_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/payment_item_height" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="7dp"
                    android:src="@drawable/payment_coin" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="최종 결제 금액"
                    android:textColor="@color/title_text_color"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/divider_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/gray_list_item_background" >

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="17dp"
                            android:gravity="center_vertical"
                            android:text="주문금액"
                            android:textColor="@color/content_title_text_color"
                            android:textSize="@dimen/payment_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/payment_cart_price_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:gravity="right"
                            android:text="0"
                            android:textColor="@color/content_title_text_color"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/gray_list_item_background" >

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="17dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="스탬프"
                            android:textColor="@color/content_title_text_color"
                            android:textSize="@dimen/payment_text_size"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/payment_stamp_usage_btn"
                            android:layout_width="51dp"
                            android:layout_height="21dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="12dp"
                            android:background="@drawable/payment_stamp_use"
                            android:gravity="right" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/payment_mileage_txt_layout"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:background="@color/gray_list_item_background" >

                        <TextView
                            android:id="@+id/payment_mileage_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="17dp"
                            android:gravity="center_vertical"
                            android:text="마일리지"
                            android:textColor="@color/content_title_text_color"
                            android:textSize="@dimen/payment_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(보유마일리지 :"
                            android:textColor="@color/content_title_text_color"
                            android:textSize="@dimen/payment_text_size" />

                        <TextView
                            android:id="@+id/payment_user_mileage_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/main_orange_color"
                            android:textSize="@dimen/payment_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/search_desc_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="원)"
                            android:textColor="@color/content_title_text_color"
                            android:textSize="@dimen/payment_text_size" />

                        <TextView
                            android:id="@+id/payment_mileage_use_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:gravity="right"
                            android:text="0"
                            android:textColor="@color/content_title_text_color"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/payment_mileage_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/payment_mileage_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/payment_mileage_use_edit"
                            android:ems="10"
                            android:inputType="number"
                            android:paddingLeft="7dp"
                            android:textColor="@color/sub_text_color"
                            android:textSize="@dimen/payment_text_size" >
                        </EditText>

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="21dp"
                            android:text="원"
                            android:textColor="@color/content_title_text_color"
                            android:textSize="@dimen/payment_text_size" />

                        <Button
                            android:id="@+id/payment_use_all_mileage_btn"
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="26dp"
                            android:background="@drawable/payment_mileage_use" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/divider_dark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="21dp"
                        android:gravity="center_vertical"
                        android:text="총 결제 금액"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/payment_result_price_txt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="16000"
                        android:textColor="@color/main_orange_color"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="17dp"
                        android:text="원"
                        android:textColor="@color/main_orange_color"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/divider_dark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="7dp"
                    android:src="@drawable/payment_clock" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="주문 접수 시간"
                    android:textColor="@color/title_text_color"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/divider_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주문하신 상품이 "
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/sub_text_color"
                    android:textSize="16sp" />

                <kankan.wheel.widget.WheelView
                    android:id="@+id/payment_wheel_view"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:gravity="center"
                    android:text=" 분 후 접수됩니다"
                    android:textColor="@color/sub_text_color"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/divider_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/payment_item_height" >

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="7dp"
                    android:src="@drawable/payment_card" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="결제 수단"
                    android:textColor="@color/title_text_color"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/divider_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical" >

                <RadioGroup
                    android:id="@+id/payment_radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <RadioButton
                        android:id="@+id/payment_radio_card"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginLeft="9dp"
                        android:background="#fff"
                        android:button="@drawable/payment_checkbox_selector"
                        android:checked="true"
                        android:paddingLeft="7dp"
                        android:text="신용카드"
                        android:textColor="@color/content_title_text_color"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/divider_light" />

                    <RadioButton
                        android:id="@+id/payment_radio_phone"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginLeft="9dp"
                        android:background="#fff"
                        android:button="@drawable/payment_checkbox_selector"
                        android:paddingLeft="7dp"
                        android:text="휴대폰"
                        android:textColor="@color/content_title_text_color"
                        android:textSize="15sp" />
                </RadioGroup>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/divider_dark" />

            <TextView
                android:id="@+id/payment_add_mileage_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="11dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/payment_mileage_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="결제 완료 후 30원이 적립됩니다"
                android:textColor="@color/sub_text_color"
                android:textSize="14sp" />

            <Button
                android:id="@+id/payment_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="11dp"
                android:background="@drawable/payment_paybtn"
                android:text="    결제하기"
                android:textColor="#fff"
                android:textSize="19sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>