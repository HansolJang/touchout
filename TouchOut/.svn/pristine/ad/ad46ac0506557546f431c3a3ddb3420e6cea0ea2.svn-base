<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/orderby_dropdown_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mywallet_mileage_bg" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:src="@drawable/mywallet_mileage_button_back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="81dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mywallet_mileage_text" />

            <TextView
                android:id="@+id/mileage_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="MILEAGE"
                android:singleLine="true"
                android:textColor="#fff"
                android:textSize="27sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/orderby_dropdown_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원"
                android:textColor="#fff"
                android:textSize="17sp" />

        </LinearLayout>
    </FrameLayout>

</FrameLayout>