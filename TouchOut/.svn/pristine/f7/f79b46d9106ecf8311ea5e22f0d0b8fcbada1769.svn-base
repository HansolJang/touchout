<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/mywallet_payment_background_middle_9patch"
    android:gravity="top"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/payment_menu_name_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:singleLine="true"
        android:text="TextView"
        android:textColor="@color/content_title_text_color"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/payment_menu_amount_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="45dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/sub_text_color"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/payment_menu_price_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:gravity="right"
        android:text="TextView"
        android:textColor="@color/sub_text_color"
        android:textSize="14sp" />

</LinearLayout>
