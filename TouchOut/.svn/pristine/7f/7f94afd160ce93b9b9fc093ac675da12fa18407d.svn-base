<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/cart_list_menu_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:textColor="#fff" />

    <Button
        android:id="@+id/cart_amount_minus_btn"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/cart_minus" />

    <TextView
        android:id="@+id/cart_list_menu_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="#fff" />

    <Button
        android:id="@+id/cart_amount_plus_btn"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/cart_plus" />

</LinearLayout>
