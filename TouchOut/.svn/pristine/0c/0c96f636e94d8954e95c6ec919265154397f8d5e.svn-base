<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/orderby_dropdown_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/divider_dark" />

        <ListView
            android:id="@+id/search_ranking_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:listSelector="@drawable/null_image"
            android:divider="@drawable/divider_light" >
        </ListView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/divider_dark" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/search_cart_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cart_height"
        android:layout_gravity="bottom"
        android:visibility="gone" >
    </FrameLayout>

   

    <ImageView
        android:id="@+id/search_cart_strap_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="-18dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/search_cart_number_view"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="33dp"
        android:layout_marginRight="23dp"
        android:background="@drawable/cart_speach_balloon"
        android:paddingLeft="5dp"
        android:text="1"
        android:textColor="#fff"
        android:textSize="11sp" />

</FrameLayout>