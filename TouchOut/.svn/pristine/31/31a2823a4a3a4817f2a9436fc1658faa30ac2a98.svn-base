<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/category_list_view"
            android:layout_width="match_parent"
            android:divider="@null"
            android:layout_height="wrap_content" >
        </ListView>
    </LinearLayout>
    
    <TextView
        android:id="@+id/home_category_cart_above_number_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="400dp"
        android:layout_marginRight="25dp"
        android:text="1" />
   
    <FrameLayout
        android:id="@+id/home_category_cart_container"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/cart_height"
        android:layout_gravity="bottom" >

    </FrameLayout>
    
    <ImageView
        android:id="@+id/home_category_cart_strap_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="-18dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_launcher" /> 
        
    <TextView
        android:id="@+id/home_category_cart_number_view"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="23dp"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/cart_speach_balloon"
        android:layout_gravity="bottom|right"
        android:textColor="#fff"
        android:textSize="11sp"
        android:paddingLeft="5dp"
        android:text="1" />

</FrameLayout>