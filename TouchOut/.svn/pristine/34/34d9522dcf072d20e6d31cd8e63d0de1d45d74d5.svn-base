<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/gray_background"
        android:paddingBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp"
        android:text="이용약관, 위치기반서비스약관 및 이용에 대한 안내를 읽으신 후 동의하시면 터치아웃 서비스를 이용하실 수 있습니다."
        android:textColor="@color/gray_medium_color"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/divider_dark" />

    <ExpandableListView
        android:id="@+id/agreement_terms_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gray_background"
        android:divider="@drawable/divider_light"
        android:groupIndicator="@drawable/null_image"
        android:listSelector="@drawable/null_image"
        android:scrollbars="none" >

    </ExpandableListView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/divider_dark" />

    <Button
        android:id="@+id/agreement_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/agreement_btn_selector"
        android:text="동의하고 터치아웃 시작하기"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>
