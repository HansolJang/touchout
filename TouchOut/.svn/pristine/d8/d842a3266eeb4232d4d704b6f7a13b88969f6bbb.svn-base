<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="640dp"
    android:gravity="center"
    android:orientation="vertical" >

    <Button
        android:id="@+id/dialog_stamp_up_exit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/dialog_exit_btn" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:visibility="invisible"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stampdialog_background"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/dialog_stamp_store_name_txt"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="TextView"
                android:textColor="#fff"
                android:textSize="20sp" />

            <GridView
                android:id="@+id/dialog_stamp_grid_view"
                android:layout_width="360dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:numColumns="5" >
            </GridView>
        </LinearLayout>

        <TextView
            android:id="@+id/stamp_reward_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/stampdialog_reward"
            android:gravity="center"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/stampdialog_icon_dot" />

            <TextView
                android:id="@+id/stamp_desc_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="본 쿠폰은 발급일로부터 1년간 유효하며. 사용기간외에 이용할 수 없음을 명시합니다."
                android:textColor="#777777"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/dialog_stamp_exit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/dialog_stamp_exit_selector"
            android:text="닫기" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:visibility="invisible"
        android:text="TextView" />

</LinearLayout>