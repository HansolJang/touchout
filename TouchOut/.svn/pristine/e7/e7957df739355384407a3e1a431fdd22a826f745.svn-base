<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/payment_price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. 상품정보" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/category_item_txt"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="상품명" />

                <TextView
                    android:id="@+id/payment_menu_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="가게명" />

                <TextView
                    android:id="@+id/payment_store_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/write_review_name_txt"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="주   소" />

                <TextView
                    android:id="@+id/payment_address_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="서울특별시 관악구 봉천동 산4-2 서울대학교 연구공원" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. 최종 결제 금액" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주문금액" />

                <TextView
                    android:id="@+id/payment_cart_price_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="스탬프" />

                <Button
                    android:id="@+id/payment_stamp_usage_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="사용" />
            </LinearLayout>

            <TextView
                android:id="@+id/payment_mileage_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="마일리지" />

            <LinearLayout
                android:id="@+id/payment_mileage_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="보유마일리지 :" />

                    <TextView
                        android:id="@+id/payment_user_mileage_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="TextView" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/payment_mileage_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:focusable="false"
                        android:inputType="number" >

                        <requestFocus />
                    </EditText>

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="원 사용" />

                    <Button
                        android:id="@+id/payment_use_all_mileage_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전액사용" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="총 결제 금액" />

                <TextView
                    android:id="@+id/payment_result_price_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="TextView" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. 주문 접수 시간" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <kankan.wheel.widget.WheelView
                    android:id="@+id/payment_wheel_view"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
                
                <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분 후 " />
                
            </LinearLayout>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="주문이 접수됩니다." />

            <CheckBox
                android:id="@+id/payment_card_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신용카드" />
            
             <CheckBox
                android:id="@+id/payment_phone_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="휴대폰" />

            <TextView
                android:id="@+id/payment_add_mileage_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#30303030"
                android:gravity="center"
                android:padding="5dp"
                android:text="결제 완료 후 30원이 적립됩니다" />

            <Button
                android:id="@+id/payment_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="결제하기" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>